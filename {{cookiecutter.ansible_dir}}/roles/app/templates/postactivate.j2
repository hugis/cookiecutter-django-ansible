#!/bin/zsh{% raw %}
# This hook is run after this virtualenv is activated.
export PYTHONPATH="{{ app_dir }}"
export DATABASE_URL="psql://{{ db_user }}:{{ db_password }}@{{ db_host }}:{{ db_port }}/{{ db_name }}"
export DJANGO_ALLOWED_HOSTS="{{ django_allowed_host|join(',') }}"
export DJANGO_MEDIA_URL="{{ django_media_url }}"
export DJANGO_SECRET_KEY="{{ django_secret_key }}"
export DJANGO_SERVER_EMAIL="{{ django_server_email }}"
export DJANGO_SETTINGS_MODULE="{{ django_settings_module }}"
export DJANGO_STATIC_URL="{{ django_static_url }}"{% endraw %}
{% if cookiecutter.use_celery == "y" %}{% raw %}# Celery
export CELERY_BROKER_URL="amqp://{{ celery_broker_user }}:{{ celery_broker_password }}@{{ celery_broker_host }}/{{ celery_broker_vhost }}"{% endraw %}{% endif %}
