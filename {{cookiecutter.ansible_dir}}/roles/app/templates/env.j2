{% raw %}# PostgreSQL
DATABASE_URL=psql://{{ db_user }}:{{ db_password }}@{{ db_host }}:{{ db_port }}/{{ db_name }}

# General settings
DJANGO_ALLOWED_HOSTS={{ django_allowed_host|join(',') }}
DJANGO_MEDIA_URL={{ django_media_url }}
DJANGO_SECRET_KEY={{ django_secret_key }}
DJANGO_SERVER_EMAIL={{ django_server_email }}
DJANGO_SETTINGS_MODULE={{ django_settings_module }}
DJANGO_STATIC_URL={{ django_static_url }}{% endraw %}

{% if cookiecutter.use_celery == "y" %}{% raw %}# Celery
CELERY_BROKER_URL=amqp://{{ celery_broker_user }}:{{ celery_broker_password }}@{{ celery_broker_host }}/{{ celery_broker_vhost }}{% endraw %}{% endif %}
